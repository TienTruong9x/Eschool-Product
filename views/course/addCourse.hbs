<div class="course-add container">
    <div class="redirect-back">
        <a href="/Me/course" class="re-link">
            <i class="fas fa-angle-double-left"></i>
            <span>&nbsp;Trở lại</span>
        </a>
    </div>
    <h1 style="text-align: center;">Đăng khóa học</h1>
    <form method="POST" action="/Me/course/add">
        <div class="form-group">
            <label for="courseName">Name</label>
            <input type="text" class="form-control" id="courseName" name="courseName" placeholder="Course Name"
                required="required">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <div class="form-group">
                <textarea class="form-control" name="description" id="description" rows="3"
                    required="required"></textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="image">URL Image</label>
            <input type="text" class="form-control" id="image" name="image" placeholder="Course IMG"
                required="required">
        </div>
        <div class="form-group">
            <label for="price">Giá</label>
            <input type="text" class="form-control" id="price" name="price" placeholder="Course Price"
                required="required">
        </div>

        <button type="submit" class="btn btn-success">Thêm</button>
    </form>
</div>