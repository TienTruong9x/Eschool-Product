<div class="course-add container">
    <div class="redirect-back">
        <a href="/Me/course" class="re-link">
            <i class="fas fa-angle-double-left"></i>
            <span>&nbsp;Trở lại</span>
        </a>
    </div>
    <h1 style="text-align: center;">Sửa khóa học - <b>{{course.courseName}}</b>.</h1>
    <form method="POST" action="/Me/course/edit/{{course.slug}}?_method=PUT">
        <div class="form-group">
            <label for="courseName">Name</label>
            <input type="text" class="form-control" id="courseName" name="courseName" placeholder="Course Name"
                value="{{course.courseName}}" required="required">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <div class="form-group">
                <textarea class="form-control" name="description" id="description" rows="3"
                    required="required">{{course.description}}</textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="image">URL Image</label>
            <input type="text" class="form-control" id="image" name="image" placeholder="Course IMG" required="required"
                value={{course.image}}>
        </div>
        <div class="form-group">
            <label for="price">Giá</label>
            <input type="text" class="form-control" id="price" name="price" placeholder="Course Price"
                required="required" value={{course.price}}>
        </div>

        <button type="submit" class="btn btn-warning">Sửa</button>
    </form>
</div>