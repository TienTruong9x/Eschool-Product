<div class="course-add container">
    <div class="redirect-back">
        <a href="/Admin/posts" class="re-link">
            <i class="fas fa-angle-double-left"></i>
            <span>&nbsp;Trở lại</span>
        </a>
    </div>
    <h1 style="text-align: center;">Sửa thông tin bài viết - <b>{{post.postName}}</b>.</h1>
    <form method="POST" action="/Admin/posts/edit/{{post.slug}}?_method=PUT">
        <div class="form-group">
            <label for="postName">Name</label>
            <input type="text" class="form-control" id="postName" name="postName" placeholder="Post Name"
                value="{{post.postName}}" required="required">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <div class="form-group">
                <textarea class="form-control" name="description" id="description" rows="3"
                    required="required">{{post.description}}</textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="image">URL Image</label>
            <input type="text" class="form-control" id="image" name="image" placeholder="Post IMG" required="required"
                value={{post.image}}>
        </div>
        <div class="form-group">
            <label for="heart">Heart</label>
            <input type="number" class="form-control" id="heart" name="heart" placeholder="Post Heart"
                required="required" value="{{post.heart}}">
        </div>
        <button type="submit" class="btn btn-warning">Sửa</button>
    </form>
</div>